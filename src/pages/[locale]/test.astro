---
import ThemeToggle from "../../components/ThemeToggle.astro";
import { getI18nStaticPaths, getTexts } from "../../i18n/index";
import '../../styles/global.css';

export const getStaticPaths = getI18nStaticPaths;
const text = getTexts(Astro.params.locale);
---
<!DOCTYPE html>
<html lang="esp">
  <head>
    <meta charset="UTF-8">
  </head>
  <body class="bg-white dark:bg-gray-800">
    <div class="min-h-screen flex flex-col items-center justify-center p-4">
      <div class="
        w-full max-w-4xl 
        p-10 sm:p-12 md:p-16 
        text-white 
        shadow-2xl 
        border-8 border-red-700 
        rounded-lg 
        text-center
        bg-red-900 
        dark:bg-green-600
      ">
        
        <h1 class="
          text-7xl sm:text-8xl md:text-9xl 
          font-extrabold 
          tracking-widest 
          uppercase 
          mb-4 
          drop-shadow-lg
        ">
          ASTRO
        </h1>

        <p class="
          text-2xl sm:text-3xl 
          font-light 
          tracking-widest 
          uppercase 
          mb-8
        ">
          Página de Prueba
        </p>

        <hr class="border-2 border-white/50 w-3/4 mx-auto mb-8">

        <div class="flex flex-col space-y-4">
          <div class="
            text-xl sm:text-2xl 
            font-mono 
            bg-black/40 
            p-2 
            rounded-sm 
            inline-block
          ">
            STATUS: <span class="text-lime-400 font-bold">OK</span>
          </div>

          <p class="text-lg font-light italic">
            Código de Referencia: AST-RED-001
          </p>
        </div>

        <ThemeToggle></ThemeToggle>

        <div class="flex mt-12 w-full h-10 border-2 border-white/80">
          <div class="w-1/4 bg-white"></div>
          <div class="w-1/4 bg-yellow-400"></div>
          <div class="w-1/4 bg-cyan-400"></div>
          <div class="w-1/4 bg-black"></div>
        </div>
        
      </div>
    </div>
  </body>
</html>
