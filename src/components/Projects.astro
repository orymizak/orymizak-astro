---
const projectsTitle = "Proyectos";

const projects = [
  { title: "Proyecto 1", description: "Descripción de ejemplo.", img: "/assets/images/test.jpeg" },
  { title: "Proyecto 2", description: "Descripción de ejemplo.", img: "/assets/images/test.jpeg" },
  { title: "Proyecto 3", description: "Descripción de ejemplo.", img: "/assets/images/test.jpeg" }
];
---

<section id="projects" class="py-20 px-6 bg-gray-100 dark:bg-gray-800">
  <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">{projectsTitle}</h2>
  <div class="max-w-6xl mx-auto grid md:grid-cols-3 gap-8">

    {projects.map(project => (
      <div class="rounded shadow-lg p-4 bg-white dark:bg-gray-900 animate-fadeIn">
        <img src={project.img} alt={project.title} class="rounded mb-4"/>
        <h3 class="text-xl font-bold mb-2">{project.title}</h3>
        <p>{project.description}</p>
      </div>
    ))}

  </div>
</section>
